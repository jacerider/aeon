{
  "name": "aeon_kit",
  "description": "AEON_KIT_DESCRIPTION",
  "browserSync": {
    "proxy" : "http://localhost",
    "port" : 3000,
    "openAutomatically" : false,
    "notify" : false
  },
  "css": {
    "dest": "assets/css",
    "src": [
      "scss/**/*.scss"
    ],
    "includePaths": [
      "../contrib/aeon/scss"
    ]
  },
  "js": {
    "dest": "assets/js",
    "src": [
      "js/**/*.js"
    ],
    "vendorDest": "assets/js/vendor"
  },
  "components": {
    "css": {
      "dest": "./components",
      "src": [
        "components/*/src/styles/*.scss",
        "scss/base/*.scss"
      ],
      "includePaths": [
        "../contrib/aeon/scss",
        "./scss/base"
      ]
    },
    "js": {
      "dest": "./components",
      "src": [
        "components/*/src/scripts/*.js"
      ]
    }
  },
  "templates": {
    "src": [
      "templates/**/*.twig",
      "components/*/*.twig"
    ]
  }
}
